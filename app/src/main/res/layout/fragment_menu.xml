<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context=".ui.starter.MenuFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRandomRecipes"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_marginTop="180dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_baseline_question_mark_24"
        android:fontFamily="@font/bohemian_soul"
        android:text="@string/random_recipes"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFavoriteRecipes"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_marginTop="150dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_round_star_24"
        android:drawablePadding="0dp"
        android:fontFamily="@font/bohemian_soul"
        android:text="@string/favorite_recipes"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="@id/btnRandomRecipes"
        app:layout_constraintStart_toStartOf="@id/btnRandomRecipes"
        app:layout_constraintTop_toBottomOf="@id/btnRandomRecipes" />

</androidx.constraintlayout.widget.ConstraintLayout>